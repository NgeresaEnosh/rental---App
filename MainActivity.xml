<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RENTALS APP"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_below="@id/title_text"/>

    <TextView
        android:id="@+id/looking_for_house_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you looking for a house to rent?"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Explore your needs section -->
    <TextView
        android:id="@+id/explore_needs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore your needs"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/looking_for_house_text"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- Suggestions Layout -->
    <LinearLayout
        android:id="@+id/suggestions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/explore_needs_text"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Suggestion 1 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 BHK"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <!-- Suggestion 2 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 BHK"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <!-- Suggestion 3 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 BHK"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <!-- Suggestion 4 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4 BHK"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Rental House Section -->
    <TextView
        android:id="@+id/rental_house_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental House"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/suggestions_layout"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"/>


    <LinearLayout
        android:id="@+id/rental_house_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rental_house_text"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:background="@drawable/logo1"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BHK Apartment"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Jam"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $1000/month"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Example Rental House Card (h5) -->
    <LinearLayout
        android:id="@+id/rental_house1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rental_house_card"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:background="@drawable/logo2"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BHK Apartment"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: sagana"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $1000/month"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rental_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rental_house1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:background="@drawable/h5"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BHK Apartment"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: sagana"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $1000/month"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rental_house2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rental_house"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:background="@drawable/h5"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BHK Apartment"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: sagana"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $1000/month"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </LinearLayout>
    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <!-- Home Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Hostel Button -->
        <LinearLayout
            android:id="@+id/hostel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hostel"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Profile Button -->
        <LinearLayout
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Help Button -->
        <LinearLayout
            android:id="@+id/help_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/help"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
